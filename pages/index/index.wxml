<!--index.wxml-->
<navigation-bar bind:myEventTap="_changeCity"
  left-item-hidden="{{true}}" 
  title-text="{{currentCityName}}"
  title-color="white"
  bar-style='arrow-button-down' 
  title-font="{{34}}"
></navigation-bar>

<!-- åœ°å›¾ -->
<view class="container">
  <map 
    id='main-map' 
    show-location='{{true}}' 
    controls='{{controls}}'
    bindcontroltap='_controlTaps'
    wx:if='{{showMap}}'
    ></map>
  <view class='citylist-container' wx:if="{{!showMap}}">
    <view wx:key="{{idx}}" wx:for="{{['A','B','C']}}" wx:for-index="idx" class='citylist-list'>{{item}}</view>
  </view>

</view>
