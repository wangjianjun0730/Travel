<canvas class='background-container' canvas-id='background-canvas'>
  <cover-view class="'shade-container' {{isShow?'showShadeAnimaiton':'hideShadeAnimaiton'}}">
    <cover-view class="'list-container' {{isShow?'showListAnimaiton':'hideListAnimaiton'}}"> 
      <cover-view 
        listArr="{{listArr}}" 
        wx:key="{{index}}" 
        wx:for="{{listArr}}" 
        class='list-view'>{{item}}
      </cover-view>
    </cover-view>   
  </cover-view>
</canvas>

